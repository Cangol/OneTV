<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <stroke android:width="1px" android:color="#FFBFBFBF"></stroke>
            <corners android:radius="5dp" />
              <gradient android:startColor="#FF247AA0" android:endColor="#FF1F5E7B" android:angle="90.0" />
        </shape>
        </item>
         <item  android:state_pressed="false">
        <shape >
            <stroke android:width="1px" android:color="#FFBFBFBF"></stroke>
            <corners android:radius="5dp" />
             <gradient android:startColor="#FFE5E5E5" android:endColor="#FFEEEEEE" android:angle="90.0" />
        </shape>
        </item>
</selector>